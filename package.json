{
  "name": "plugins",
  "version": "1.0.0",
  "description": "A collection of build tools and VS Code extensions for conditional code removal and development workflow optimization.",
  "main": "index.js",
  "packageManager": "pnpm@10.13.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build lint test && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0-kodiya-0/plugins.git"
  },
  "keywords": [
    "code-removal",
    "build-tools",
    "esbuild",
    "vite",
    "vscode-extension"
  ],
  "author": "Sanithu Jayakody <sanithujayafiverr@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/0-kodiya-0/plugins/issues"
  },
  "homepage": "https://github.com/0-kodiya-0/plugins#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6"
  }
}
